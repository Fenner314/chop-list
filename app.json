{
  "expo": {
    "name": "chop-list",
    "slug": "chop-list",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "choplist",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.choplist.ios",
      "googleServicesFile": "./config/prod/GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Chop List to access your camera to scan recipes"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FDF6E3",
        "foregroundImage": "./assets/icons/logo2.png",
        "monochromeImage": "./assets/icons/logo2.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.choplist.android",
      "googleServicesFile": "./config/prod/google-services.json"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo2.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/logo2.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Allow Chop List to access your camera to scan recipes"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
