rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Spaces - users can read/write if they're a member
    match /spaces/{spaceId} {
      // Anyone authenticated can read a space if they're a member
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.memberIds;

      // Only the owner can create a space (and they must be the owner)
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.ownerId;

      // Members can update the space, OR a user can add themselves to memberIds (for accepting invites)
      // Owner can also update sharingPaused even when not actively syncing
      allow update: if request.auth != null &&
        (request.auth.uid in resource.data.memberIds ||
         // Allow owner to update sharingPaused field
         (request.auth.uid == resource.data.ownerId &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['sharingPaused'])) ||
         // Allow adding self to memberIds (accepting invite)
         (request.auth.uid in request.resource.data.memberIds &&
          !(request.auth.uid in resource.data.memberIds) &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberIds'])));

      // Only owner can delete the space
      allow delete: if request.auth != null &&
        request.auth.uid == resource.data.ownerId;

      // Items subcollection
      match /items/{itemId} {
        allow read, write: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/spaces/$(spaceId)).data.memberIds;
      }

      // Recipes subcollection
      match /recipes/{recipeId} {
        allow read, write: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/spaces/$(spaceId)).data.memberIds;
      }

      // Members subcollection
      match /members/{memberId} {
        // Members can read the members list
        allow read: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/spaces/$(spaceId)).data.memberIds;

        // Owner can add/remove anyone, user can add/remove themselves
        allow write: if request.auth != null &&
          (request.auth.uid == get(/databases/$(database)/documents/spaces/$(spaceId)).data.ownerId ||
           request.auth.uid == memberId);
      }
    }

    // Invites - for sharing spaces
    match /invites/{inviteId} {
      // Inviter can read their own invites, invitee can read invites sent to them
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.inviterUserId ||
         request.auth.token.email == resource.data.inviteeEmail);

      // Any authenticated user can create an invite
      allow create: if request.auth != null;

      // Invitee can update (accept/decline) or delete the invite
      // Inviter can also delete (cancel) the invite
      allow update, delete: if request.auth != null &&
        (request.auth.token.email == resource.data.inviteeEmail ||
         request.auth.uid == resource.data.inviterUserId);
    }
  }
}
